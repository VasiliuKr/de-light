			.fabric-gallery__item(style="background-image:url(assets/img/userfiles/slide-1.jpg);")
				.fabric-gallery__tile Светильники Eichholtz
			.fabric-gallery__item(style="background-image:url(assets/img/userfiles/1.jpg);")
